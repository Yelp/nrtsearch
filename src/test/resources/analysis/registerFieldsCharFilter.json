{
  "indexName": "test_index",
  "field": [
    {
      "name": "doc_id",
      "type": "_ID",
      "search": true,
      "storeDocValues": true
    },
    {
      "name": "text_field",
      "type": "TEXT",
      "search": true,
      "tokenize": true,
      "multiValued": true,
      "storeDocValues": true,
      "analyzer": {
        "custom": {
          "tokenizer": {
            "name": "keyword"
          },
          "charFilters": [
            {
              "name": "mappingV2",
              "params": {
                "mappings": "a=>e|'s=>|?=>|&=>\\u0020"
              }
            }
          ]
        }
      }
    }
  ]
}
